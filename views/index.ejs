<%- include("header") -%>
    <main>
        <form action="/" method="post">
            <div class="inputs">
                <input id="input" type="text" name="novoItem">
                <button type="submit" name="botao" value=<%= titulo %>>+</button>
            </div>
        </form>
        <div class="lista">
            <ul>
                <% itens.forEach((_)=>{ %>
                    <div class="item">
                        <input type="checkbox">
                        <li><%= _.texto %></li>
                    </div>
                    <hr>
                <% }) %>
            </ul>
        </div>
    </main>
<%- include("footer") -%>